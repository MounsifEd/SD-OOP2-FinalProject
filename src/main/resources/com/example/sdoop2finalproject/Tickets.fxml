<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="20.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.sdoop2finalproject.Controllers.TicketController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <!-- Header with Title and Go Back Button -->
    <HBox alignment="CENTER_LEFT" spacing="20.0">
        <Button fx:id="goBackButton"
                onAction="#handleGoBack"
                style="-fx-background-color: #6c757d; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 6px 12px; -fx-font-size: 14px;"
                text="Back" />
        <Label style="-fx-font-size: 28px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Purchase Tickets" />
    </HBox>

    <!-- Main Content Area with Two Columns -->
    <HBox spacing="30.0" VBox.vgrow="ALWAYS">
        <!-- Left Column: Customer and Ticket Inputs -->
        <VBox spacing="15.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 20px; -fx-background-color: #f9f9f9;" HBox.hgrow="ALWAYS">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Customer Information" />

            <VBox spacing="5.0">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="First Name" />
                <TextField fx:id="firstNameField" promptText="Enter first name" />
            </VBox>

            <VBox spacing="5.0">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Last Name" />
                <TextField fx:id="lastNameField" promptText="Enter last name" />
            </VBox>

            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333; -fx-padding-top: 10px;" text="Ticket Details" />

            <HBox spacing="15.0">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Movie" />
                    <Label fx:id="movieNameLabel" style="-fx-font-size: 12px; -fx-text-fill: #555555; -fx-padding: 8px; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1;" text="-" />
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Room" />
                    <Label fx:id="roomLabel" style="-fx-font-size: 12px; -fx-text-fill: #555555; -fx-padding: 8px; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1;" text="-" />
                </VBox>
            </HBox>

            <HBox spacing="15.0">
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Date" />
                    <Label fx:id="dateLabel" style="-fx-font-size: 12px; -fx-text-fill: #555555; -fx-padding: 8px; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1;" text="-" />
                </VBox>
                <VBox spacing="5.0" HBox.hgrow="ALWAYS">
                    <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Time" />
                    <Label fx:id="timeLabel" style="-fx-font-size: 12px; -fx-text-fill: #555555; -fx-padding: 8px; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1;" text="-" />
                </VBox>
            </HBox>

            <VBox spacing="5.0">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Number of Tickets" />
                <Spinner fx:id="ticketSpinner" prefWidth="120.0" />
            </VBox>

            <VBox spacing="5.0">
                <Label style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Price per Ticket" />
                <Label fx:id="pricePerTicketLabel" style="-fx-font-size: 12px; -fx-text-fill: #555555; -fx-padding: 8px; -fx-background-color: #ffffff; -fx-border-color: #cccccc; -fx-border-width: 1;" text="0.00$" />
            </VBox>
        </VBox>

        <!-- Right Column: Summary and Payment -->
        <VBox spacing="15.0" style="-fx-border-color: #e0e0e0; -fx-border-width: 1; -fx-padding: 20px; -fx-background-color: #f9f9f9;" minWidth="280.0">
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333333;" text="Order Summary" />

            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Label style="-fx-font-size: 12px; -fx-font-weight: bold;" text="Tickets:" />
                <Label fx:id="summaryTicketCountLabel" style="-fx-font-size: 12px;" text="0" />
            </HBox>
            <HBox spacing="10.0" alignment="CENTER_RIGHT">
                <Label style="-fx-font-size: 12px; -fx-font-weight: bold;" text="Unit Price:" />
                <Label fx:id="summaryUnitPriceLabel" style="-fx-font-size: 12px;" text="0.00$" />
            </HBox>
            <HBox spacing="10.0" alignment="CENTER_RIGHT" style="-fx-padding: 8px; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
                <Label style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Total:" />
                <Label fx:id="totalAmountLabel" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #28a745;" text="0.00$" />
            </HBox>

            <Button fx:id="payWithCardButton" onAction="#handlePayWithCard"
                    style="-fx-background-color: #0052cc; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 12px 16px; -fx-font-size: 14px;"
                    text="Pay with Card" />
        </VBox>
    </HBox>

    <Label style="-fx-font-size: 11px; -fx-text-fill: #999999;" text="Enter your name and ticket quantity, then pay with card. You'll be taken to 'My Tickets'." />
</VBox>
