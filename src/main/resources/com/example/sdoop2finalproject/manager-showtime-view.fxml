<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="com.example.sdoop2finalproject.Controllers.ManagerShowtimeController">

    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-padding: 20;">
            <Label style="-fx-font-size: 22px; -fx-font-weight: bold;" text="New Showtime" />

            <GridPane hgap="15" vgap="15">
                <columnConstraints>
                    <ColumnConstraints halignment="RIGHT" />
                    <ColumnConstraints hgrow="ALWAYS" />
                </columnConstraints>

                <!-- ROOM SELECTOR -->
                <Label text="Select Room:" GridPane.columnIndex="0" GridPane.rowIndex="0" />
                <ComboBox fx:id="roomComboBox" prefWidth="250" promptText="Choose a screening room" GridPane.columnIndex="1" GridPane.rowIndex="0" />

                <!-- MOVIE SELECTOR -->
                <Label text="Select Movie:" GridPane.columnIndex="0" GridPane.rowIndex="1" />
                <ListView fx:id="movieListView" prefHeight="150" prefWidth="300" GridPane.columnIndex="1" GridPane.rowIndex="1" />

                <!-- SCREENING TIME INPUT -->
                <Label text="Screening Time:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
                <TextField fx:id="timeField" prefWidth="250" promptText="e.g. 19:30" GridPane.columnIndex="1" GridPane.rowIndex="2" />
            <rowConstraints>
               <RowConstraints />
               <RowConstraints />
               <RowConstraints />
            </rowConstraints>

            </GridPane>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="20">
                <Button style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Create Showtime" />
                <Button prefHeight="25.0" prefWidth="75.0" style="-fx-background-color: #2196F3; -fx-text-fill: white;" text="Cancel" />
            </HBox>

        </VBox>
    </center>

</BorderPane>
