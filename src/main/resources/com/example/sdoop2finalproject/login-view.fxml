<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<HBox xmlns="http://javafx.com/javafx/24" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.sdoop2finalproject.Controllers.LoginController"
      spacing="40.0" style="-fx-background-color: #ffffff;" alignment="CENTER">
    <padding>
        <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
    </padding>

    <!-- LEFT SIDE: LOGIN FORM -->
    <VBox fx:id="loginForm" spacing="15.0" prefWidth="350.0" style="-fx-background-color: #f5f5f5; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <!-- Title -->
        <Label text="Log In" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333333;" />

        <!-- Sign Up Link -->
        <HBox spacing="5.0">
            <Label text="Don't have an account?" style="-fx-font-size: 14px; -fx-text-fill: #666666;" />
            <Label fx:id="signUpLink" text="Sign Up"
                   onMouseClicked="#showSignUp"
                   style="-fx-font-size: 14px; -fx-text-fill: #0066cc; -fx-underline: true; -fx-cursor: hand;" />
        </HBox>

        <!-- Email Field -->
        <Label text="Email*" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        <TextField fx:id="emailField" promptText="Enter Email*" prefHeight="40.0" style="-fx-font-size: 13px; -fx-padding: 10px; -fx-border-color: #cccccc; -fx-border-width: 1;" />

        <!-- Password Field -->
        <Label text="Password*" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        <PasswordField fx:id="passwordField" promptText="Enter Password*" prefHeight="40.0" style="-fx-font-size: 13px; -fx-padding: 10px; -fx-border-color: #cccccc; -fx-border-width: 1;" />


        <!-- Log In Button -->
        <Button fx:id="logInButton" text="LOG IN" maxWidth="Infinity" prefHeight="45.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #0052cc; -fx-text-fill: white; -fx-cursor: hand;" />
    </VBox>

    <!-- RIGHT SIDE: SIGN UP FORM -->
    <VBox fx:id="signupForm" spacing="15.0" prefWidth="350.0"
          visible="false" managed="false"
          style="-fx-background-color: #f5f5f5; -fx-border-color: #e0e0e0; -fx-border-width: 1;">
        <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
        </padding>

        <!-- Title -->
        <Label text="Sign Up" style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333333;" />

        <!-- Back to Log In Link -->
        <HBox spacing="5.0">
            <Label text="Have an account?" style="-fx-font-size: 14px; -fx-text-fill: #666666;" />
            <Label fx:id="loginLink" text="Log In"
                   onMouseClicked="#showLogin"
                   style="-fx-font-size: 14px; -fx-text-fill: #0066cc; -fx-underline: true; -fx-cursor: hand;" />
        </HBox>

        <!-- First Name Field -->
        <Label text="First Name*" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        <TextField fx:id="firstNameField" promptText="First Name*" prefHeight="40.0" style="-fx-font-size: 13px; -fx-padding: 10px; -fx-border-color: #cccccc; -fx-border-width: 1;" />

        <!-- Last Name Field -->
        <Label text="Last Name*" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        <TextField fx:id="lastNameField" promptText="Last Name*" prefHeight="40.0" style="-fx-font-size: 13px; -fx-padding: 10px; -fx-border-color: #cccccc; -fx-border-width: 1;" />

        <!-- Email Field -->
        <Label text="Email*" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        <TextField fx:id="signupEmailField" promptText="Enter Email*" prefHeight="40.0" style="-fx-font-size: 13px; -fx-padding: 10px; -fx-border-color: #cccccc; -fx-border-width: 1;" />

        <!-- Password Field -->
        <Label text="Choose a Password*" style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333333;" />
        <PasswordField fx:id="signupPasswordField" promptText="Choose a Password*" prefHeight="40.0" style="-fx-font-size: 13px; -fx-padding: 10px; -fx-border-color: #cccccc; -fx-border-width: 1;" />

        <!-- Password Requirements -->
        <VBox spacing="8.0" style="-fx-padding: 10px; -fx-background-color: #eeeeee; -fx-border-radius: 5;">
            <Label fx:id="critLen" text="10-20 characters" style="-fx-font-size: 12px; -fx-text-fill: #666666;" />
            <Label fx:id="critUpper" text="1 uppercase (A-Z)" style="-fx-font-size: 12px; -fx-text-fill: #666666;" />
            <Label fx:id="critDigit" text="1 number" style="-fx-font-size: 12px; -fx-text-fill: #666666;" />
        </VBox>

        <!-- Newsletter Checkbox -->
        <CheckBox text="Get exclusive movie deals delivered right to your email. You can unsubscribe from our Movies Special Offers and Events at any time." wrapText="true" style="-fx-font-size: 11px; -fx-text-fill: #333333;" />

        <!-- Sign Up Button -->
        <Button fx:id="signUpButton" text="SIGN UP" maxWidth="Infinity" prefHeight="45.0" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-background-color: #0052cc; -fx-text-fill: white; -fx-cursor: hand;" />


    </VBox>
</HBox>
